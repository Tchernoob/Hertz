{% extends 'base.html.twig' %}

{% block title %}Piece index{% endblock %}

{% block body %}

   
        <h2 class="form-title">Mes travaux</h2>

        <div class="form-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Dimensions</th>
                        <th>Technique</th>
                        <th>Année</th>
                        <!-- <th>Image</th> -->
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for piece in pieces %}
                    <tr>
                        <td>{{ piece.id }}</td>
                        <td>{{ piece.title }}</td>
                        <td>{{ piece.size }}</td>
                        <td>{{ piece.year }}</td>
                        <td>{{ piece.technique}}</td>
                        <!-- <td>{{ piece.image }}</td> -->
                        <td>
                            <!--<a href="{{ path('app_piece_show', {'id': piece.id}) }}">Voir la pièce</a> -->
                            <a href="{{ path('app_piece_edit', {'id': piece.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Pas de pièces enregistrées</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('app_piece_new') }}" class="btn btn-dark btn-lg">Ajouter</a>
        </div>

{% endblock %}
